<?xml version="1.0" encoding="utf-8"?>
    <selector xmlns:android="http://schemas.android.com/apk/res/android">
        <item android:state_enabled ="false">

            <shape android:shape="rectangle" >

                <corners
                    android:radius="100dp"
                    />
                <solid
                    android:color="#F41952"
                    />
                <padding
                    android:left="0dp"
                    android:top="0dp"
                    android:right="0dp"
                    android:bottom="0dp"
                    />
                <size
                    android:width="150dp"
                    android:height="150dp"
                    />
            </shape>
        </item>

        <item android:state_enabled ="true">

            <shape android:shape="rectangle" >

                <corners
                    android:radius="100dp"
                    />
                <solid
                    android:color="@color/squareBtnBackgroundColor"
                    />
                <padding
                    android:left="0dp"
                    android:top="0dp"
                    android:right="0dp"
                    android:bottom="0dp"
                    />
                <size
                    android:width="150dp"
                    android:height="150dp"
                    />
            </shape>
        </item>
</selector>