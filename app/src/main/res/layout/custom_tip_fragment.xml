<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/customTipLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screenBackgroundColor">

    <Button
        android:id="@+id/endCursorBtn"
        android:layout_width="2dp"
        android:layout_height="81dp"
        android:layout_marginBottom="16dp"
        android:background="@color/cursorBlue"
        android:clickable="false"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/custom_tip_screen_editText"
        app:layout_constraintEnd_toStartOf="@+id/custom_tip_screen_editText"
        app:layout_constraintHorizontal_bias="0.26"
        app:layout_constraintStart_toEndOf="@+id/custom_tip_screen_editText" />

    <TextView
        android:id="@+id/custom_tip_screen_tip_breakdown_textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/source_sans_pro"
        android:text="tipBreakDown"
        android:textColor="@color/red"
        android:textSize="30sp"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/custom_tip_screen_trip_total_textView"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <EditText
        android:id="@+id/custom_tip_screen_editText"
        android:layout_width="345dp"
        android:layout_height="105dp"
        android:background="@null"
        android:clickable="false"
        android:contextClickable="false"
        android:cursorVisible="false"
        android:defaultFocusHighlightEnabled="false"
        android:descendantFocusability="beforeDescendants"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="true"
        android:fontFamily="@font/source_sans_pro"
        android:hint="0"
        android:textAlignment="center"
        android:textColor="@color/grey"
        android:textColorHint="@color/grey"
        android:textCursorDrawable="@null"
        android:textSize="87sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonLinerLayout"
        app:layout_constraintEnd_toStartOf="@+id/custom_tip_screen_minus_btn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.923" />

    <ImageView
        android:id="@+id/custom_tip_screen_plus_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonLinerLayout"
        app:layout_constraintStart_toStartOf="@+id/buttonLinerLayout"
        app:srcCompat="@drawable/ic_add_circular_outlined_button" />

    <ImageView
        android:id="@+id/custom_tip_screen_minus_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonLinerLayout"
        app:layout_constraintEnd_toEndOf="@+id/buttonLinerLayout"
        app:srcCompat="@drawable/ic_minus_circular_button" />

    <TextView
        android:id="@+id/dollar_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/source_sans_pro"
        android:text="$"
        android:textAlignment="viewStart"
        android:textColor="@color/whiteTextColor"
        android:textSize="87sp"
        app:layout_constraintBottom_toBottomOf="@+id/custom_tip_screen_editText"
        app:layout_constraintEnd_toEndOf="@+id/custom_tip_screen_editText"
        app:layout_constraintHorizontal_bias="0.19"
        app:layout_constraintStart_toStartOf="@+id/custom_tip_screen_editText" />

    <TextView
        android:id="@+id/percent_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/source_sans_pro"
        android:text="%"
        android:textAlignment="viewStart"
        android:textColor="@color/whiteTextColor"
        android:textSize="87sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/custom_tip_screen_editText"
        app:layout_constraintEnd_toEndOf="@+id/custom_tip_screen_editText"
        app:layout_constraintHorizontal_bias="0.853"
        app:layout_constraintStart_toStartOf="@+id/custom_tip_screen_editText" />

    <ImageView
        android:id="@+id/close_custom_tip_screen_btn"
        android:layout_width="58dp"
        android:layout_height="43dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_close_black_24dp" />

    <LinearLayout
        android:id="@+id/buttonLinerLayout"
        android:layout_width="500dp"
        android:layout_height="292dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="24dp"
        android:clipChildren="false"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/custom_tip_screen_one_btn"
                android:layout_width="154dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/square_tip_btn"
                android:fontFamily="@font/source_sans_pro"
                android:text="1"
                android:textColor="@color/whiteTextColor"
                android:textSize="30sp" />

            <Button
                android:id="@+id/button16"
                android:layout_width="20sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="false"
                android:text="Button"
                android:visibility="invisible" />

            <Button
                android:id="@+id/custom_tip_screen_two_btn"
                android:layout_width="154dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/square_tip_btn"
                android:fontFamily="@font/source_sans_pro"
                android:text="2"
                android:textColor="@color/whiteTextColor"
                android:textSize="30sp" />

            <Button
                android:id="@+id/button17"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="false"
                android:text="Button"
                android:visibility="invisible" />

            <Button
                android:id="@+id/custom_tip_screen_three_btn"
                android:layout_width="154dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/square_tip_btn"
                android:fontFamily="@font/source_sans_pro"
                android:text="3"
                android:textColor="@color/whiteTextColor"
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <Button
                android:id="@+id/custom_tip_screen_four_btn"
                android:layout_width="154dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/square_tip_btn"
                android:fontFamily="@font/source_sans_pro"
                android:text="4"
                android:textColor="@color/whiteTextColor"
                android:textSize="30sp" />

            <Button
                android:id="@+id/button18"
                android:layout_width="20sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="false"
                android:text="Button"
                android:visibility="invisible" />

            <Button
                android:id="@+id/custom_tip_screen_five_btn"
                android:layout_width="154dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/square_tip_btn"
                android:fontFamily="@font/source_sans_pro"
                android:text="5"
                android:textColor="@color/whiteTextColor"
                android:textSize="30sp" />

            <Button
                android:id="@+id/button19"
                android:layout_width="20sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="false"
                android:text="Button"
                android:visibility="invisible" />

            <Button
                android:id="@+id/custom_tip_screen_six_btn"
                android:layout_width="154dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/square_tip_btn"
                android:fontFamily="@font/source_sans_pro"
                android:text="6"
                android:textColor="@color/whiteTextColor"
                android:textSize="30sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <Button
                android:id="@+id/custom_tip_screen_seven_btn"
                android:layout_width="154dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/square_tip_btn"
                android:fontFamily="@font/source_sans_pro"
                android:text="7"
                android:textColor="@color/whiteTextColor"
                android:textSize="30sp" />

            <Button
                android:id="@+id/button20"
                android:layout_width="20sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="false"
                android:text="Button"
                android:visibility="invisible" />

            <Button
                android:id="@+id/custom_tip_screen_eight_btn"
                android:layout_width="154dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/square_tip_btn"
                android:fontFamily="@font/source_sans_pro"
                android:text="8"
                android:textColor="@color/whiteTextColor"
                android:textSize="30sp" />

            <Button
                android:id="@+id/button21"
                android:layout_width="20sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="false"
                android:text="Button"
                android:visibility="invisible" />

            <Button
                android:id="@+id/custom_tip_screen_nine_btn"
                android:layout_width="154dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/square_tip_btn"
                android:fontFamily="@font/source_sans_pro"
                android:text="9"
                android:textColor="@color/whiteTextColor"
                android:textSize="30sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/custom_tip_screen_backspace_btn"
                android:layout_width="154dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/square_tip_btn"
                app:srcCompat="@drawable/ic_backspace_arrow_white" />

            <Button
                android:id="@+id/button23"
                android:layout_width="20sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="false"
                android:text="Button"
                android:visibility="invisible" />

            <Button
                android:id="@+id/custom_tip_screen_zero_btn"
                android:layout_width="154dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/square_tip_btn"
                android:fontFamily="@font/source_sans_pro"
                android:text="0"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/whiteTextColor"
                android:textSize="30sp" />

            <Button
                android:id="@+id/button22"
                android:layout_width="20sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="false"
                android:text="Button"
                android:visibility="invisible" />

            <Button
                android:id="@+id/custom_tip_screen_done_btn"
                android:layout_width="154dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/custom_tip_done_button"
                android:enabled="false"
                android:fontFamily="@font/source_sans_pro"
                android:text="Done"
                android:textAllCaps="false"
                android:textColor="@color/whiteTextColor"
                android:textSize="24sp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/source_sans_pro"
        android:text="Give a tip?"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/whiteTextColor"
        android:textSize="54sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.06"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/close_custom_tip_screen_btn" />

    <TextView
        android:id="@+id/custom_tip_screen_trip_total_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/source_sans_pro_semibold"
        android:text="$"
        android:textAlignment="center"
        android:textColor="@color/red"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.06"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <Button
        android:id="@+id/custom_tip_screen_percentage_amt_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="90dp"
        android:background="@drawable/circle_button"
        android:clickable="true"
        android:fontFamily="@font/source_sans_pro_semibold"
        android:text="%"
        android:textColor="@color/whiteTextColor"
        android:textSize="90sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonLinerLayout" />

    <Button
        android:id="@+id/custom_tip_screen_dollar_amt_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="90dp"
        android:background="@drawable/circle_button"
        android:clickable="true"
        android:enabled="false"
        android:fontFamily="@font/source_sans_pro_semibold"
        android:text="$"
        android:textAlignment="center"
        android:textColor="@color/whiteTextColor"
        android:textSize="90sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/custom_tip_screen_percentage_amt_btn"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/beginningCursorBtn"
        android:layout_width="2dp"
        android:layout_height="81dp"
        android:layout_marginBottom="16dp"
        android:background="@color/cursorBlue"
        android:clickable="false"
        app:layout_constraintBottom_toBottomOf="@+id/custom_tip_screen_editText"
        app:layout_constraintEnd_toStartOf="@+id/custom_tip_screen_editText"
        app:layout_constraintHorizontal_bias="0.62"
        app:layout_constraintStart_toEndOf="@+id/custom_tip_screen_editText" />

    <Button
        android:id="@+id/middleCursorBtn"
        android:layout_width="2dp"
        android:layout_height="81dp"
        android:layout_marginBottom="16dp"
        android:background="@color/cursorBlue"
        android:clickable="false"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/custom_tip_screen_editText"
        app:layout_constraintEnd_toStartOf="@+id/custom_tip_screen_editText"
        app:layout_constraintHorizontal_bias="0.34"
        app:layout_constraintStart_toEndOf="@+id/custom_tip_screen_editText" />

    <TextView
        android:id="@+id/custom_tip_screen_tip_breakdown_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/source_sans_pro"
        android:text="tipBreakDown"
        android:textColor="@color/red"
        android:textSize="30sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toStartOf="@+id/dollar_textView"
        app:layout_constraintHorizontal_bias="0.14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/custom_tip_screen_trip_total_textView" />

    <View
        android:id="@+id/blocker_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:alpha="0.5"
        android:background="@color/screenBackgroundColor"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>