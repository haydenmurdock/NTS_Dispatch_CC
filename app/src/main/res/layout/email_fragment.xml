<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout8"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screenBackgroundColor">

    <ImageView
        android:id="@+id/back_btn_email_receipt"
        android:layout_width="79dp"
        android:layout_height="43dp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.02"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_left_arrow_2" />

    <Button
        android:id="@+id/no_receipt_btn_receipt_email"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/no_receipt_button"
        android:fontFamily="@font/source_sans_pro"
        android:text="No Receipt"
        android:textAllCaps="false"
        android:textColor="@color/whiteTextColor"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/source_sans_pro_semibold"
        android:text="Get an email receipt"
        android:textColor="@color/whiteTextColor"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.11"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/back_btn_email_receipt" />

    <EditText
        android:id="@+id/email_editText"
        android:layout_width="749dp"
        android:layout_height="82dp"
        android:layout_marginTop="110dp"
        android:background="@null"
        android:clickable="false"
        android:contextClickable="false"
        android:cursorVisible="true"
        android:defaultFocusHighlightEnabled="true"
        android:ems="10"
        android:focusedByDefault="true"
        android:fontFamily="@font/source_sans_pro"
        android:hint="Enter email address"
        android:inputType="textNoSuggestions|textWebEmailAddress"
        android:selectAllOnFocus="true"
        android:textColor="@color/whiteTextColor"
        android:textColorHint="@color/grey"
        android:textCursorDrawable="@drawable/cursor"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3">

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/send_email_btn_receipt"
        android:layout_width="146dp"
        android:layout_height="72dp"
        android:layout_marginTop="105dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/custom_tip_done_button"
        android:enabled="false"
        android:fontFamily="@font/source_sans_pro"
        android:text="Send"
        android:textAllCaps="false"
        android:textColor="@color/whiteTextColor"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />
</androidx.constraintlayout.widget.ConstraintLayout>