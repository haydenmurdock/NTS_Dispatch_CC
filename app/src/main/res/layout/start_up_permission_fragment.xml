<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screenBackgroundColor"
    tools:context=".fragments.StartUpPermissionFragment">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="14dp"
        android:layout_height="24dp"
        android:layout_marginEnd="26dp"
        android:src="@drawable/white_dot_btn"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/set_your_meter_textView"
        app:layout_constraintEnd_toStartOf="@+id/set_your_meter_textView"
        app:layout_constraintTop_toTopOf="@+id/set_your_meter_textView" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="14dp"
        android:layout_height="24dp"
        android:layout_marginEnd="26dp"
        android:src="@drawable/white_dot_btn"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/tap_options_textView"
        app:layout_constraintEnd_toStartOf="@+id/tap_options_textView"
        app:layout_constraintTop_toTopOf="@+id/tap_options_textView" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="14dp"
        android:layout_height="24dp"
        android:layout_marginEnd="26dp"
        android:src="@drawable/white_dot_btn"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/tap_the_charge_textView"
        app:layout_constraintEnd_toStartOf="@+id/tap_the_charge_textView"
        app:layout_constraintTop_toTopOf="@+id/tap_the_charge_textView" />

    <ImageView
        android:id="@+id/back_to_driver_app_from_btn"
        android:layout_width="79dp"
        android:layout_height="43dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="8dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/how_to_charge_title_textView"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_left_arrow_2" />


    <TextView
        android:id="@+id/how_to_charge_title_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/source_sans_pro_semibold"
        android:text="How to charge a credit card with this app: "
        android:textColor="@color/whiteTextColor"
        android:textSize="40sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/active_trip_TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/you_must_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:fontFamily="@font/source_sans_pro_semibold"
        android:text="You must be on an"
        android:textColor="@color/whiteTextColor"
        android:textSize="26sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/set_your_meter_textView"
        app:layout_constraintStart_toStartOf="@+id/set_your_meter_textView" />

    <TextView
        android:id="@+id/set_your_meter_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/source_sans_pro_semibold"
        android:text="Set your meter display to time-off (blue toggle) to make payment"
        android:textColor="@color/whiteTextColor"
        android:textSize="26sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tap_options_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/source_sans_pro_semibold"
        android:text='Tap "Options" at the top of the screen of the "Dispatch" app'
        android:textColor="@color/whiteTextColor"
        android:textSize="26sp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@+id/set_your_meter_textView"
        app:layout_constraintTop_toBottomOf="@+id/set_your_meter_textView" />

    <TextView
        android:id="@+id/tap_the_charge_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/source_sans_pro_semibold"
        android:text='Tap the "Charge Credit Card" button'
        android:textColor="@color/whiteTextColor"
        android:textSize="26sp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@+id/set_your_meter_textView"
        app:layout_constraintTop_toBottomOf="@+id/tap_options_textView" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="14dp"
        android:layout_height="24dp"
        android:layout_marginEnd="26dp"
        android:src="@drawable/white_dot_btn"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/you_must_textView"
        app:layout_constraintEnd_toStartOf="@+id/you_must_textView"
        app:layout_constraintTop_toTopOf="@+id/you_must_textView" />

    <TextView
        android:id="@+id/active_trip_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:fontFamily="@font/source_sans_pro_semibold"
        android:text="@string/under_line_text"
        android:textColor="@color/whiteTextColor"
        android:textSize="26sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/you_must_textView"
        app:layout_constraintStart_toEndOf="@+id/you_must_textView"
        app:layout_constraintTop_toTopOf="@+id/you_must_textView" />

    <TextView
        android:id="@+id/with_driver_app_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:fontFamily="@font/source_sans_pro_semibold"
        android:text='with the driver "Dispatch" app'
        android:textColor="@color/whiteTextColor"
        android:textSize="26sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/active_trip_TextView"
        app:layout_constraintStart_toEndOf="@+id/active_trip_TextView"
        app:layout_constraintTop_toTopOf="@+id/active_trip_TextView" />

    <ProgressBar
        android:id="@+id/startup_progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>